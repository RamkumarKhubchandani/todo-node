<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>My To-Do's</title>
</head>
<body>
  <h1>My To-Do's</h1>

  <h2>Create New To-Do</h2>
  <form action="/add-todo" method="POST">
    <input type="text" name="todoText" placeholder="Enter your to-do">
    <button type="submit">Create New To-Do</button>
  </form>

  <h2>Open To-Do's</h2>
  <ul>
    <% openTodos.forEach((todo, index) => { %>
      <li>
        <%= todo %>
        <form action="/complete-todo" method="POST" style="display: inline;">
          <input type="hidden" name="todoIndex" value="<%= index %>">
          <button type="submit">To-Do completed</button>
        </form>
      </li>
    <% }); %>
  </ul>

  <h2>Completed To-Do's</h2>
  <ul>
    <% completedTodos.forEach(todo => { %>
      <li><%= todo %></li>
    <% }); %>
  </ul>
</body>
</html>